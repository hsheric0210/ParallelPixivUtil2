<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<log4net>
		<appender name="ProgressBarCompatibleConsoleAppender" type="ParallelPixivUtil2.ProgressBarCompatibleConsoleAppender, ParallelPixivUtil2">
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="INFO" />
			</filter>

			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="[%-5level] %logger | %message" />
			</layout>
		</appender>

		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="ParallelPixivUtil2.log" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="32" />
			<maximumFileSize value="16MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="[%date{yyyy-MM-dd HH:mm:ss}] [%-5level] %logger | %message%newline" />
			</layout>
		</appender>

		<root>
			<level value="ALL" />
			<appender-ref ref="RollingFileAppender" />
			<appender-ref ref="ProgressBarCompatibleConsoleAppender" />
		</root>
	</log4net>
</configuration>